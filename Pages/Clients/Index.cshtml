@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model BD9.Pages.Clients.IndexModel
@*@Styles.Render("~/Content/css")*@
<link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
<h2>Список клиентов</h2>
<p><a asp-page="Create">Добавить клиента</a></p>
<table>
    <tr><th>Фамилия</th><th>Имя</th><th>Отчество</th><th>Электронная почта</th><th>Телефон</th></tr>
    @foreach (var user in Model.Clients)
    {
        <tr>
            <td>@user.Surname</td>
            <td>@user.Name</td>
            <td>@user.Lastname</td>
            <td>@user.Email</td>
            <td>@user.Phone</td>
            <td>
                <form method="post">
                    <a asp-page="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
